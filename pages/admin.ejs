                            <path d="M155,120c-8.284,0-15,6.716-15,15s6.716,15,15,15h80c8.284,0,15-6.716,15-15s-6.716-15-15-15H155z"/>
                            <path d="M235,180h-80c-8.284,0-15,6.716-15,15s6.716,15,15,15h80c8.284,0,15-6.716,15-15S243.284,180,235,180z"/>
                            <path d="M235,240h-80c-8.284,0-15,6.716-15,15c0,8.284,6.716,15,15,15h80c8.284,0,15-6.716,15-15C250,246.716,243.284,240,235,240z   "/>
                        </g>
                    </svg>
                </section>
                <section>
                    <h2 class="title">Имя:</h2>
                    <p class="userName"></p>
                </section>
                <section>
                    <h2 class="title">Почта:</h2>
                    <p class="userMail"></p>
                </section>
                <section>
                    <h2 class="title">Счёт:</h2>
                    <p class="userCoins"></p>
                </section>
                <section>
                    <h2 class="title">Статус:</h2>
                    <p class="userStatus"></p>
                </section>
                <hr class="horizontalLine finalLine">
                <section>
                    <button class="changeButton">Изменить</button>
                    <button class="deleteButton">Удалить</button>
                </section>
        </template>
    </div>
    <div id="popup" class="popup">
        <div class="popup__body">
            <div class="popup__content">
                <div class="popup__title">Создать нового пользователя</div>
                <div class="popup__form">
                    <form action="">
                        <label for="name">
                            <p class="inputTitle">Имя:</p>
                            <input name="name" type="text">
                        </label>
                        <label for="mail">
                            <p class="inputTitle">Почта:</p>
                            <input name="mail" type="mail">
                        </label>
                        <label for="coins">
                            <p class="inputTitle">Счет:</p>
                            <input name="coins" type="number">
                        </label>
                        <label for="status">
                            <p class="inputTitle">Статус:</p>
                            <select class="status" name="status">
                                <option value="User">User</option>
                                <option value="Admin">Admin</option>
                            </select>
                        </label>
                        <label for="password">
                            <p class="inputTitle">Пароль:</p>
                            <input name="password" type="password">
                        </label>
                        <label for="rePassword">
                            <p class="inputTitle">Повтор пароля:</p>
                            <input name="rePassword" type="password">
                        </label>
                        <hr class="horizontalLine popupLine">
                        <section>
                            <button class="popup__send__button" type="submit">Отправить</button>
                            <button class="popup__close__button">Отмена</button>
                        </section>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%-include('./partials/scripts')%>
    </div>
</body>
</html>