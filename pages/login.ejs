<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head') %> 

<body>
    <div class="wrapper">

        <%-include('./partials/header')%>
        <div class="container">
            <h1 class="title">Вход</h1>
            <%if (!userProfile.logined){%>
            <form id="loginForm">
                <div class="form__content">
                    <div class="form__body">
                        <section for="login">
                            <p class="inputTitle">Имя или почта</p>
                            <input type="text" name="login">
                        </section>
                        <section for="password">
                            <p class="inputTitle">Пароль</p>
                            <input type="password" name="pass">
                        </section>
                    </div>
                    <button id="submit" type="submit" name="submit">Войти</button>
                </div>
            </form>
            <%} else {%>
                <h2 class="personal__message">Вы уже зашли в аккаунт!</h2>
            <%}%>
        </div>
    
    <%-include('./partials/scripts')%>
    </div>
</body>
</html>